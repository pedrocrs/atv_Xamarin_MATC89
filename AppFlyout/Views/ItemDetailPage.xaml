<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:viewmodels="clr-namespace:AppFlyout.ViewModels" x:DataType="viewmodels:ItemDetailViewModel"
             x:Class="AppFlyout.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Nome:" FontSize="Medium" />
        <Label Text="{Binding Nome}" FontSize="Small"/>
        <Label Text="Sinopse:" FontSize="Medium" />
        <Label Text="{Binding Sinopse}" FontSize="Small"/>
        <Label Text="Ano:" FontSize="Medium" />
        <Label Text="{Binding Ano}" FontSize="Small"/>
		<Label Text="Quantidade de Oscars:" FontSize="Medium" />
		<Label Text="{Binding QtdOscars}" FontSize="Small"/>
        <Label Text="Atores:" FontSize="Medium" />
        <Label Text="{Binding Atores}" FontSize="Small"/>
    </StackLayout>
    
</ContentPage>